<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/dimen_400_px"
        android:layout_height="@dimen/dimen_150_px"
        android:background="@drawable/szzc_bak_dialog_up"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/szzc_view_hintmsg_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/dimen_5_px"
            android:paddingRight="@dimen/dimen_5_px"
            android:textColor="@color/szzc_color_dark_black"
            android:textSize="@dimen/dimen_16_sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/dimen_400_px"
        android:layout_height="@dimen/dimen_40_px"
        android:orientation="horizontal" >

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/szzc_color_dark_gary" />

        <Button
            android:id="@+id/szzc_view_hintmsg_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/szzc_bak_button"
            android:singleLine="true"
            android:text="@string/string_cancle_btn"
            android:textColor="@color/szzc_color_dark_black"
            android:textSize="@dimen/dimen_16_sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/szzc_color_dark_gary" />

        <Button
            android:id="@+id/szzc_view_hintmsg_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/szzc_bak_button"
            android:singleLine="true"
            android:text="@string/sting_sure_btn"
            android:textColor="@color/szzc_color_dark_black"
            android:textSize="@dimen/dimen_16_sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/szzc_color_dark_gary" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dimen_400_px"
        android:layout_height="1dip"
        android:background="@color/szzc_color_dark_gary" />

</LinearLayout>